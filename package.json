{
    "name": "dogcord",
    "version": "3.1.4",
    "private": true,
    "description": "Dog Cord is a custom Discord desktop app for good boys and girls üêï",
    "keywords": [],
    "homepage": "https://github.com/shteppi/dogcord",
    "license": "GPL-3.0-or-later",
    "author": "DogPack <woof@dogcord.dog>",
    "main": "dist/js/main.js",
    "scripts": {
        "build": "bun run scripts/build/build.mts",
        "build:dev": "bun run build --dev",
        "buildLibVesktop": "bun install --cwd packages/libvesktop && bun run --cwd packages/libvesktop build",
        "compileArrpc": "bun run scripts/build/compileArrpc.mts",
        "package": "bun run build && electron-builder",
        "package:dir": "bun run build && electron-builder --dir",
        "lint": "eslint",
        "lint:fix": "bun lint --fix",
        "start": "bun run build && electron .",
        "start:dev": "bun run build:dev && electron .",
        "start:watch": "bun run build:dev && bun run scripts/startWatch.mts",
        "test": "bun lint && bun testTypes",
        "testTypes": "tsc --noEmit",
        "watch": "bun run build --watch",
        "generateMeta": "bun run scripts/utils/generateMeta.mts",
        "updateArrpcDB": "bun ./node_modules/arrpc-bun/scripts/update_db.ts",
        "postinstall": "bun updateArrpcDB && bun compileArrpc"
    },
    "dependencies": {
        "arrpc-bun": "^1.3.1",
        "electron-updater": "^6.7.1"
    },
    "optionalDependencies": {
        "@vencord/venmic": "^6.1.0"
    },
    "devDependencies": {
        "@equicord/types": "^1.13.7",
        "@fal-works/esbuild-plugin-global-externals": "^2.1.2",
        "@stylistic/eslint-plugin": "^5.6.1",
        "@types/node": "^24.10.1",
        "@types/react": "19.2.1",
        "dotenv": "^17.2.3",
        "electron": "^39.2.3",
        "electron-builder": "^26.0.12",
        "esbuild": "^0.27.0",
        "eslint": "^9.39.1",
        "eslint-import-resolver-alias": "^1.1.2",
        "eslint-plugin-path-alias": "^2.1.0",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-simple-header": "^1.2.2",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "eslint-plugin-unused-imports": "^4.3.0",
        "libvesktop": "file:packages/libvesktop",
        "prettier": "^3.6.2",
        "source-map-support": "^0.5.21",
        "type-fest": "^5.2.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.47.0",
        "xml-formatter": "^3.6.7",
        "@types/bun": "^1.3.2"
    },
    "engines": {
        "bun": ">=1.3.0"
    },
    "build": {
        "appId": "org.dogpack.dogcord",
        "productName": "Dog Cord",
        "executableName": "dogcord",
        "files": [
            "!*",
            "!node_modules",
            "dist/js",
            "static",
            "package.json",
            "LICENSE"
        ],
        "protocols": {
            "name": "Discord",
            "schemes": [
                "discord"
            ]
        },
        "beforePack": "scripts/build/beforePack.mjs",
        "afterPack": "scripts/build/afterPack.mjs",
        "linux": {
            "icon": "build/icon.svg",
            "category": "Network",
            "maintainer": "woof@dogcord.dog",
            "target": [
                {
                    "target": "deb",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                },
                {
                    "target": "tar.gz",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                },
                {
                    "target": "rpm",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                },
                {
                    "target": "AppImage",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                }
            ],
            "desktop": {
                "entry": {
                    "Name": "Dog Cord",
                    "GenericName": "Internet Messenger for Good Boys",
                    "Type": "Application",
                    "Categories": "Network;InstantMessaging;Chat;",
                    "Keywords": "discord;vencord;electron;chat;dogcord;woof;bark",
                    "MimeType": "x-scheme-handler/discord",
                    "StartupWMClass": "dogcord"
                }
            }
        },
        "mac": {
            "target": [
                {
                    "target": "default",
                    "arch": "universal"
                }
            ],
            "category": "public.app-category.social-networking",
            "darkModeSupport": true,
            "extendInfo": {
                "NSMicrophoneUsageDescription": "This app needs access to the microphone",
                "NSCameraUsageDescription": "This app needs access to the camera",
                "com.apple.security.device.audio-input": true,
                "com.apple.security.device.camera": true,
                "CFBundleIconName": "Icon"
            },
            "notarize": true
        },
        "dmg": {
            "background": "build/background.tiff",
            "icon": "build/icon.icns",
            "iconSize": 105,
            "window": {
                "width": 512,
                "height": 340
            },
            "contents": [
                {
                    "x": 140,
                    "y": 160
                },
                {
                    "x": 372,
                    "y": 160,
                    "type": "link",
                    "path": "/Applications"
                }
            ]
        },
        "nsis": {
            "include": "build/installer.nsh",
            "oneClick": false
        },
        "win": {
            "icon": "build/icon.ico",
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                },
                {
                    "target": "zip",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                }
            ]
        },
        "publish": {
            "provider": "github"
        },
        "rpm": {
            "fpm": [
                "--rpm-rpmbuild-define=_build_id_links none"
            ]
        }
    },
    "trustedDependencies": [
        "@vencord/venmic",
        "electron",
        "electron-winstaller",
        "esbuild"
    ]
}
